<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">

  <div class="form-group">
    <label for="inputsm">Title</label>
    <input class="form-control input-sm" id="inputsm" type="text" name="postTitle" placeholder="">
  </div>
  <div class="form-group">
    <label for="inputlg">Post</label>
    <textarea name="postBody" rows="5" cols="50" class="form-control input-lg"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>
